<p id="notice"><%= notice %></p>
<div class= "row">
<div id="sidebar" class="col-xs-3">
  <b>Food Menus</b>
</div>


</div>
<div class="row">
  <div class="col-xs-9">
    <table class="table">
      <thead>
        <tr>
          <th>Serve date</th>
          <th>Food</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @food_menus.each do |food_menu| %>
          <tr>
            <td><%= food_menu.serve_date %></td>
            <td><%= link_to food_menu.food.name, food_path(food_menu.food_id) %></td>
            <td><%= link_to 'Show', food_menu %>
            <%= link_to 'Edit', edit_food_menu_path(food_menu) %>
            <%= link_to 'Destroy', food_menu, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-xs-3">
    <div id="sidebar" class="btn btn-success ">
      <%= link_to 'Food', foods_path%>
    </div>
  </div>
</div>

<br>

<div class="col-xs-2 btn btn-success pull-left">
<%= link_to 'New Food Menu', new_food_menu_path %>
</div>